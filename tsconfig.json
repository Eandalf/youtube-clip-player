{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "alwaysStrict": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@app/*": ["src/app/*"],
      "@main/*": ["src/main/*"]
    }
  },
  "include": ["src"]
}
